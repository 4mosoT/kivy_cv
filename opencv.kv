#: import Cv_Camera cv_camera.cv_camera
#: import im_proc image_processing.image_processing
<Cv_Camera>:

BoxLayout:
    orientation: 'vertical'
    Cv_Camera:
        id: camera
        image_function: im_proc.face_detection
    Button:
        text: "Simple Return"
        size_hint: None, None
        size: (100,50)
        on_press: camera.image_function = im_proc.simple_return

    Button:
        text: "Detect Faces"
        size_hint: None, None
        size: (100,50)
        on_press: camera.image_function = im_proc.face_detection
